{
    "$schema": "http://json.schemastore.org/template",
    "author": "Christian HÃ¸jsager",
    "classifications": [
        "Web",
        "ASP.NET Core",
        "ASP.NET Core Web Api"
    ],
    "identity": "hoejsagerc",
    "name": "DDD Clean Architecture Web Api",
    "shortName": "ddd.cleanwebapi",
    "sourceName": "Pokemon",
    "symbols": {
        "skipRestore": {
            "type": "parameter",
            "datatype": "bool",
            "description": "Skips the restore of the solution when creating the project.",
            "defaultValue": "false"
        },
        "framework": {
            "type": "parameter",
            "description": "Choose the framework for the project.",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "net6.0",
                    "description": ".NET 6.0"
                },
                {
                    "choice": "net7.0",
                    "description": ".NET 7.0"
                }
            ],
            "defaultValue": "net7.0",
            "replaces": "{TargetFramework}"
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "exclude": [
                        ".vs/**",
                        ".vscode/**"
                    ]
                }
            ]
        }
    ]
}